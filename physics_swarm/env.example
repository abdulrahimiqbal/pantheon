# Physics AI Agent Swarm Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Physics AI Agent Swarm"
APP_VERSION="2.0.0"
DEBUG=true
ENVIRONMENT="development"

# API Keys (replace with actual keys for production)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
TAVILY_API_KEY=""

# Optional API Keys
BRIGHTDATA_API_KEY=""

# Database Configuration
DATABASE_URL="sqlite:///./physics_swarm.db"
DATABASE_ECHO=false

# Server Configuration
HOST="localhost"
PORT=8000
RELOAD=true

# Agent Configuration
DEFAULT_MODEL="gpt-4"
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_TIMEOUT=120

# Web Search Configuration
MAX_SEARCH_RESULTS=10
SOURCE_CREDIBILITY_THRESHOLD=0.6

# Swarm Configuration
MAX_PARALLEL_AGENTS=4
GLOBAL_TIMEOUT=600
ENABLE_HYPOTHESIS_GENERATION=false

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security Configuration
SECRET_KEY=your_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60 