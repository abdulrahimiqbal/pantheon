{
  "version": 2,
  "name": "pantheon",
  "builds": [
    {
      "src": "orchestration/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/orchestration/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/orchestration/main.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "orchestration/main.py": {
      "runtime": "python3.11"
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "autoAlias": true
  }
} 